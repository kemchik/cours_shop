<div class='row'>
  <div class='col-lg-4'>
    <%= simple_form_for [@category, @product] do |f| %>
        <p>
          <%= f.file_field :image %>
        </p>

        <p>
          <%= f.input :name %>
        </p>

        <p>
          <%= f.input :description %>
        </p>

        <p>
          <%= f.input :ingredients %>
        </p>

        <p>
          <%= f.input :weight %>
        </p>

        <p>
          <%= f.input :price %>
        </p>

        <p>
          <%= f.submit %>
        </p>
    <% end %>
  </div>
</div>